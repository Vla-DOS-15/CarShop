@model IEnumerable<CarShop.Models.Car>

@{
    ViewData["Title"] = "Головна";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <div class="row mt-6 mb-2">
    @{
        foreach (var car in ViewBag.Cars)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail w-100" src="@car.CarImage.RefFirstImg" alt="@car.Brand"/>
                <h2>@car.Brand @car.Model @car.YearManufacture року</h2>
                <h4>Ціна - @car.Price.ToString("c")</h4>
                <a class="btn btn-outline-secondary btn-lg" href="/CarInfo/GetInfo/@car.IdCar">Детальніше</a>
                <a class="btn btn-success btn-lg" href="/Order/Buy/@car.IdCar">Купити</a>

            </div>
        }
    }
    </div>